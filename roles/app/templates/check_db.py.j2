#!/usr/bin/env python3
import psycopg2
import sys

try:
    conn = psycopg2.connect(
        dbname="myapp_db",
        user="myapp_user",
        password="secret",
        host="192.168.56.11"
    )
    cur = conn.cursor()
    cur.execute("SELECT 1;")
    result = cur.fetchone()
    print("DB connection OK:", result)
    cur.close()
    conn.close()
except Exception as e:
    print("DB connection failed:", e)
    sys.exit(1)
